<div id="sidebar">
          <div class="side_block">
            <h2 class="side_title">
              Свежие минуса
            </h2>
            <div class="side_cont">
              <ul>
                <% if new_minus.empty? %>
                  <li>Нету свежих минусов :)</li>
                <% else %>
                  <% new_minus.each do |minus| %>
                    <li><%= link_to minus.title, "/store/#{minus.id}" %></li>
                  <% end %>
                <% end %>              
              </ul>
            </div>
          </div>  
          <div class="side_block">
            <h2 class="side_title">
              Проданные минуса
            </h2>
            <div class="side_cont">
              <ul>
                <% if sold_minus.empty? %>
                  <li>Пока никто не купил:)</li>
                <% else %>
                  <% sold_minus.each do |minus| %>
                    <li><%= link_to minus.title, "/store/#{minus.id}" %></li>
                  <% end %>
                <% end %>                
              </ul>
            </div>
          </div>
