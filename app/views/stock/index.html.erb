<h1 class="catalog_site_title">Акции</h1>
<% if notice%>
<p id="notice">
  <%= notice %>
</p>
<% end %>
<% if empty_stock %>
<p id="notice">
  <%= empty_stock %>
</p>
<% end %>
<% @stocks.each do |stock| %>
  <div class="post_one">
    <div class="title">
      <%= link_to stock.title, "stocks/#{stock.id}" %>
    </div>
    <div class="content">
      <%= raw(stock.body) %>
    </div>
    <div class="date_add">
      Дата публикации: <%= stock.created_at.strftime("%d.%m.%Y") %>
    </div>    
  </div>
<% end %>
<div class="willpaginate">
<%= will_paginate @stocks %>
</div>
