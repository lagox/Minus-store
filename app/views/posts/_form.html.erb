<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this catalog from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title, "Название" %><br/ >
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Текст" %><br />
    <%= f.text_area :body, :size => "30x10" %>
  </div>
  <div class="field">
    <%= f.label :category, "Категория" %><br />
    <%= f.select :category, Post::CATEGORY, :prompt => "Выберите категорию" %>
  </div>
  <p>
    <%= f.submit "Создать" %>
  </p>
<% end %>
